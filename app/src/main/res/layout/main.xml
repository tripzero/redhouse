<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3e3e3"
    android:fitsSystemWindows="true">



    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/app_bar_layout"
        android:background="@color/primary"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/primary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="88dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <io.codetail.widget.RevealFrameLayout
                android:id="@+id/collapse_frame"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                android:layout_height="wrap_content"
                >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="66dp">

                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="16dp"
                    android:padding="8dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/ic_user"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"

                >
                <EditText android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:shadowColor="@color/white"
                    android:layout_weight="1"
                    android:ems="10"
                    android:lines="1"
                    android:layout_gravity="center_vertical"
                    android:inputType="textMultiLine"
                    app:theme="@style/login_theme"
                    android:hint="Username"
                    />
            </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="42dp">

                <ImageView
                    android:id="@+id/login_image"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="16dp"
                    android:padding="8dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/ic_password"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <EditText
                        android:id="@+id/password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:shadowColor="@color/white"
                        android:layout_weight="1"
                        android:ems="10"
                        android:lines="1"
                        android:layout_gravity="bottom"
                        android:inputType="textPassword"
                        app:theme="@style/login_theme"
                        android:hint="Password"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            </LinearLayout>

                <ImageView
                    android:id="@+id/cover_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:visibility="invisible"
                    android:src="@drawable/material_banner"/>

            </io.codetail.widget.RevealFrameLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|enterAlways">


                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="16dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_leaf"/>


            </android.support.v7.widget.Toolbar>



        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>



    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill_vertical"
        android:background="@color/primary"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_frame">


        <io.codetail.widget.RevealFrameLayout
            android:id="@+id/reveal_frame"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            android:layout_height="match_parent"
            >


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="42dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_soil"/>


                <TextView
                    android:id="@+id/soil_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:text="Soil"
                    />

            </LinearLayout>

                <android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/alarm_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    card_view:cardCornerRadius="6dp"
                    card_view:cardBackgroundColor="@color/card_color"
                    card_view:cardElevation="2dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="16dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_temp"/>

                <TextView
                    android:id="@+id/soil_temp_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:text="Temperature"
                    />

                <TextView
                    android:id="@+id/soil_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:text="0 C"
                    />

            </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="16dp">


                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="16dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_water"/>

                    <TextView
                        android:id="@+id/soil_moist_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:text="Moisture"
                        />

                    <TextView
                        android:id="@+id/soil_moist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="16dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:text="0 C"
                        />

                </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_air"/>


                    <TextView
                        android:id="@+id/air_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:text="Air"
                        />

                </LinearLayout>
            <android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/air_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                card_view:cardCornerRadius="6dp"
                card_view:cardBackgroundColor="@color/card_color"
                card_view:cardElevation="2dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">


                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="16dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_temp"/>

                    <TextView
                        android:id="@+id/air_moist_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:text="Temperature"
                        />

                    <TextView
                        android:id="@+id/air_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="16dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:text="0 C"
                        />

                </LinearLayout>


            </LinearLayout>
            </android.support.v7.widget.CardView>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp">


                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_water"/>

                    <TextView
                        android:id="@+id/water_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:text="Water Switch"
                        />

                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="center_vertical"
                        app:theme="@style/Custom.Widget.SwitchCompat"
                        android:id="@+id/water_switch"/>

                </LinearLayout>
            </LinearLayout>

            <include
                android:id="@+id/empty_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/empty_view"/>

            <View
                android:id="@+id/reveal"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@color/fab"
                android:visibility="gone"
                />
        </io.codetail.widget.RevealFrameLayout>





</FrameLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/login_fab"
        app:rippleColor="@android:color/white"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginRight="16dp"
        android:scaleType="fitCenter"
        app:backgroundTint="@color/fab"
        android:src="@drawable/ic_check_white_48dp"
        android:padding="14dp"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="right|end|bottom"
        />

</android.support.design.widget.CoordinatorLayout>